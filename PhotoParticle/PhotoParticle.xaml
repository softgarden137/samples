<Canvas
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="System.Windows.Controls.Canvas"
  Width="400"
  Height="400"
    x:Name="MainCanvas">
    <Canvas.Clip>
        <RectangleGeometry Rect="0, 0, 640, 480"/>
    </Canvas.Clip>
    <Canvas.Triggers>
        <EventTrigger RoutedEvent="Canvas.Loaded">
            <BeginStoryboard>
                <Storyboard x:Name="timerSB" BeginTime="0" Duration="0:0:0" />
                <!-- Completed="OnTimerCompleted -->
            </BeginStoryboard>
        </EventTrigger>
    </Canvas.Triggers>

    <Rectangle Height="480" Width="640">
        <Rectangle.Fill>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#000050"/>
                <GradientStop Offset="1" Color="Black"/>
            </LinearGradientBrush>
        </Rectangle.Fill>
    </Rectangle>
</Canvas>